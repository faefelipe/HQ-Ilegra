.site-container
  max-width: 1170px;

*
  word-break: break-all;

body 
  background #E3E3E3
  font-family 'Lato', sans-serif
  font-size 16px

  .site-header 
    background-color #4c4c4c
    
    .site-title
      text-align center

  .list-show, .list-posts
    h2 
      font-size 3rem
      font-family 'Merienda One', cursive
      text-transform uppercase
  .single-comic
    h3 
      font-weight 700
      font-size 1.7rem
    p 
      word-break break-word 
      text-align justify

  .site-footer
    background-color #f6f5f7
    p
      margin-bottom 0
      font-weight 700
    a  
      background url('../images/gmail.svg') no-repeat center bottom
      color transparent      
      padding 25px
      display inline-block